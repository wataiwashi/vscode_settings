{
    "editor.bracketPairColorization.enabled": true,
    "files.autoSave": "onFocusChange",

    "fortran-ls.executablePath": "/home/iwashita/anaconda3/bin/fortls",
    "fortran-ls.lowercaseIntrinsics": true,
    "fortran.linter.compilerPath": "/usr/bin/gfortran",
    "python.defaultInterpreterPath": "/home/iwashita/anaconda3/bin/python",

